{% extends "layout.html.twig" %}
{% block body %}
    <h2>Some notifications</h2>
    {{ notif('success', 'Victory!') }}
    {{ notif('warning', 'Warning...') }}
    {{ notif('danger', 'Error... error...') }}
    {{ notif('info', 'Lorem ipsu') }}

    <h2>Some fields</h2>
    {{ field('text', 'name', 'Name') }}
    {{ field('email', 'mail', 'Email') }}
    {{ field('textarea', 'comment', 'Comment') }}

    <h2>Form generated by an array</h2>
    {{ formGeneration(form) }}
    {{ dump(form) }}
{% endblock %}
